<h3 class="profile_title"> Your Books </h3>

<p class="book_count_user"><%= @books.count %></p>
<div class="library_wrapper">
<% @books.each_with_index do |book, index| %>
  <% save_point = UserBook.find_by(book_id: book.id, user_id: current_user.id).farthest_point %>

  <div id="user_library"><%= link_to book.title, user_book_path(@this_user, book)%></div>
    <div class="progress_bar_wrapper">
      <div class="progress_bar_index<%=index%>"></div>
      <div class="bar_percentage" id="bar<%=index%>"><%= ((save_point.to_f / tokenize(book.content).size ).to_f * 100).to_i %></div>
    </div>
  <br>
<% end %>
</div>

<div id="upload">
<%unless mobile_device? %>
  <h3 class="profile_title"> Upload a Book </h3>
  <%= form_tag( user_books_upload_path(@this_user), :html => { :'data-ajax' => false }, method: "post", multipart: true) do %>
    <%= file_field_tag :book %>
    <%= text_field_tag :title %>
    <%= submit_tag('Upload') %>
  <% end %>
  <%end %>
</div>




